<h1>GeekTwitter</h1>
<h3>Tweet詳細</h3>

<div class="tweet">
  <p><%= @tweet.body %></p>
  <p><%= @tweet.created_at %></p>
  <p>
   <%= link_to @tweet.video_url.to_s do %>
   <%= video_tag(@tweet.video.to_s) %>
   <% end %>
  </p>

    <% if user_signed_in? %>
        <% if current_user.already_liked?(@tweet) %>
          <%= link_to tweet_like_path(@tweet), method: :delete do %>
              <p>いいねを取り消す</p><%= @tweet.likes.count %>
              <i class="fas fa-heart"></i><%= @tweet.likes.count %>
          <% end %>
     <% else %>
        <%= link_to tweet_likes_path(@tweet), method: :post do %>
              <p>いいね</p><%= @tweet.likes.count %>
              <i class="fas fa-heart"></i><%= @tweet.likes.count %>
        <% end %>
      <% end %>
     <% else %>
       <p>いいねの数 = </p><%= @tweet.likes.count %>
       <i class="far fa-heart"></i><%= @tweet.likes.count %>
    <% end %>
</div>

<h2>いいねしたユーザー</h2>

<% @tweet.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>

<div class="comment-wrapper">
  <p>投稿についてのコメント</p>
  <% @comments.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@tweet, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>

<%= link_to "Tweet一覧に戻る", tweets_path %>